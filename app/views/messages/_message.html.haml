.main__content__message
  .main__content__message__upper-info
    .main__content__message__upper-info__name
      = message.user.name
    .main__content__message__upper-info__time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .main__content__message__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: "lower-message__image" if message.image.present?